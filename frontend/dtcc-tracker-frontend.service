[Unit]
Description=DTCC Tracker Frontend (Next.js)
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/dtcc-tracker/frontend
Environment="NODE_ENV=production"
Environment="PORT=3000"
ExecStart=/usr/bin/npm start

Restart=always
RestartSec=10

StandardOutput=append:/var/log/dtcc-tracker-frontend.log
StandardError=append:/var/log/dtcc-tracker-frontend-error.log

[Install]
WantedBy=multi-user.target
