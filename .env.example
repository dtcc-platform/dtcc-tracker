REFRESH_TOKEN_LIFETIME_DAYS=7

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8000

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
